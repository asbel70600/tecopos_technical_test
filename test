services:
  sso-db:
    image: postgres
    restart: always
    shm_size: 128mb
    environment:
      POSTGRES_DB: ${POSTGRES_DB}
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
    ports:
      - "${DB_PORT}:5432"
    volumes:
      - sso-db-data:/var/lib/postgresql/data
    networks:
      - tecopos-network
    # healthcheck:
    #   test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER}"]
    #   interval: 5s
    #   timeout: 5s
    #   retries: 5

  adminer:
    image: adminer
    restart: always
    ports:
      - 8080:8080
    networks:
      - tecopos-network

  sso-service:
    build:
      context: ./services/sso
      dockerfile: Dockerfile
    ports:
      - "${SSO_PORT}:50051"
    environment:
      GRPC_URL: 0.0.0.0:50051
      DATABASE_URL: postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@sso-db:5432/${POSTGRES_DB}
    depends_on:
      sso-db:
        condition: service_healthy
    networks:
      - tecopos-network
    volumes:
      - ./services/sso/keys:/app/keys:ro

  banking-service:
    build:
      context: ./services/banking
      dockerfile: Dockerfile
    ports:
      - "${BANKING_PORT}:3000"
      - "50052:50052"
    environment:
      PORT: 3000
      GRPC_URL: 0.0.0.0:50052
      MOCKAPI_URL: ${MOCKAPI_URL}
    depends_on:
      - sso-service
    networks:
      - tecopos-network

  api-gateway:
    build:
      context: ./api_gateway
      dockerfile: Dockerfile
    ports:
      - "${GATEWAY_PORT}:3000"
    environment:
      PORT: 3000
      SSO_SERVICE_URL: sso-service:50051
      BANKING_SERVICE_URL: banking-service:50052
    depends_on:
      - sso-service
      - banking-service
    networks:
      - tecopos-network

networks:
  tecopos-network:
    driver: bridge

volumes:
  sso-db-data:
